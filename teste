        <input type="button" value="Valider" onclick="retournerValeurs()">
    </form>

    <script>
        function retournerValeurs() {
            const champ1 = document.getElementById("champ1").value;
            const champ2 = document.getElementById("champ2").value;
            const champ3 = document.getElementById("champ3").value;

            // Vous pouvez faire ce que vous voulez avec les valeurs ici
            console.log("Champ 1 :", champ1);
            console.log("Champ 2 :", champ2);
            console.log("Champ 3 :", champ3);
        }
    </script>
